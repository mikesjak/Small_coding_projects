import turtle as t
import random

colors = ["dim gray","slate gray","cornflower blue","blue","dodger blue","turquoise","teal","lime green","dark green","lime","gold","peru","deep pink","red","medium violet red","blue violet","indigo"]
direction = [0, 90, 180, 270]

tim = t.Turtle()
tim.pensize(10)
tim.speed(10)

for _ in range(10000):
    tim.color(random.choice(colors))
    tim.forward(25)
    tim.setheading(random.choice(direction))

